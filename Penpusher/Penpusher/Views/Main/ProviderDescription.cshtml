@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script>
    localStorage.providerId = @ViewBag.providerId;
</script>

<script src="~/Scripts/ProviderDescriptionScript.js"></script>

<div id="providerDescriptionContainer"> <!--main container-->
