<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Penpusher</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link type="text/css" href="~/Content/Site.css" />
    <script type='text/javascript' src="~/Scripts/knockout-3.4.0.js"></script>
    <script type="text/javascript" src="~/Scripts/jquery-1.10.2.js"></script>
    <script type="text/javascript" src="~/Scripts/MasterPageScript.js"></script>
</head>
<body>
    <div class="container">
        <div id="sidebar">
            <div class="side-bar-content">
                <div>
                    <img src="https://cdn4.iconfinder.com/data/icons/small-n-flat/24/user-alt-128.png"
                         width="40"
                         height="40" />
                    <label>@ViewBag.UserName</label>
                    <button id="logOutBtn" onclick="location.href='@Url.Action("LogOff", "Account")'">Log out</button>
                </div>
            </div>
            <hr />
            <button id="ToFavoriteButton" class="myButton">Favorite</button>
            <button class="myButton">Saved for later</button>

            <select id="sideBarSelect" class="styled-select green rounded">
                @{
                    foreach (var item in ViewBag.ProvidersList)
                    {
                        <option>@item</option>
                    }
                }
            </select>

            <button class="myButton">Manage content</button>

        </div>
        <div id="content">
            @RenderBody()

        </div>
        <div id="footer">
            <div id="copyrightLabel">
                <label>Penpusher 2016</label>
            </div>
        </div>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
